<div class="card border-light bg-dark">
    <h6 class="card-header">Raid dump</h6>
    <div class="card-body">
        <div class="card-text">
            <div class="text-nowrap row" vg-content='fmt.Sprintf("%d attendees", len(c.Update.Attendees))'></div>
            <div class="row">
                <span class="text-nowrap col-6">
                    Name:
                    <span class="col-5" style="color: black;"><ui:AutoComplete EditStyle="width:6rem;" :Value="c.RaidName" @Suggestion="c.suggest(event)" @Change="c.updateDescription(event)"></ui:AutoComplete></span>
                </span>
                <span class="text-nowrap col-4">
                    Value:
                    <input type="text" style="width:4rem;" :value='fmt.Sprintf("%.1f", c.RaidValue)' @change="c.updateDKP(event)">
                </span>
            </div>
            <div class="row">
                <span class="text-nowrap col-3">
                    Pending for:
                    <input type="text" style="width:4rem;" :value='fmt.Sprint(c.PostDateHours)' @change="c.updatePostDate(event)">
                    hr
                </span>
            </div>
            <div vg-if='c.Error!=""' class="row text-warning" vg-content="c.Error"></div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a href="#" title="Upload" vg-if='c.RaidName!=""' @click="c.upload(event)">&#x2714;</a>
                <a href="#" title="Ignore" @click="c.dismiss(event)">&#x274c;</a>
            </div>
        </div>
    </div>
</div>
<script type="application/x-go">
import (
    "fmt"
    "github.com/GontikR99/chillmodeinfo/cmd/webapp/ui"
)
</script>