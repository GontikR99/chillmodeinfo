<div class="container-fluid">
    <h5>Adjustments</h5>
    <table class="table table-striped">
        <thead class="thead-dark">
        <th scope="col">Date</th>
        <th scope="col">Character</th>
        <th scope="col">Change</th>
        <th scope="col" style="width:100%;">Description</th>
        <th scope="col">Authority</th>
        <th scope="col" vg-if="localprofile.IsAdmin()"></th>
        </thead>
        <tbody>
        <tr vg-if="localprofile.IsAdmin() && !c.appending">
            <td>Now</td>
            <td>
                <ui:SelectBox style="width:15rem;" :Value="c.pendingMember" :Options="c.KeyList()" @Change='c.updatePendingMember(event)'/>
            </td>
            <td><input type="text" :value='fmt.Sprintf("%.1f",c.pendingDKP)' @change="c.updatePendingDKP(event)"/></td>
            <td><ui:AutoComplete width="100%" EditStyle="width: 100%;" :Value='c.pendingDescription' @Suggestion="c.suggest(event)" @Change="c.updatePendingDescription(event)"/></td>
            <td vg-content="localprofile.GetProfile().GetDisplayName()"></td>
            <td><a href="#" title="Add" @click="c.addEntry(event)">&#x2795;</a></td>
        </tr>
        <tr vg-for="eIdx:=0; eIdx<c.MaxDisplay && eIdx<len(c.Logs); eIdx++" vg-key="c.Logs[eIdx].GetEntryId()">
            <td class="text-nowrap" vg-content="util.FormatTimestamp(c.Logs[eIdx].GetTimestamp())"></td>
            <td style="width:10rem;"><a :href='"#member:"+c.Logs[eIdx].GetTarget()' vg-content="c.Logs[eIdx].GetTarget()"></a></td>
            <td class="text-right" style="width:6rem;">
                <ui:EditLabel
                        :Value='fmt.Sprintf("%.1f", c.Logs[eIdx].GetDelta())'
                        :Editable="localprofile.IsAdmin() && c.Logs[eIdx].GetRaidId()==0"
                        EditStyle="width: 4rem;"
                        @Submit="c.updateDelta(event, c.Logs[eIdx])"
                />
            </td>
            <td>
                <ui:EditLabel
                    :Value="c.Logs[eIdx].GetDescription()"
                    :Editable="localprofile.IsAdmin() && c.Logs[eIdx].GetRaidId()==0"
                    :TextStyle="descriptionStyle(c.Logs[eIdx])"
                    @Submit="c.updateDescription(event, c.Logs[eIdx])"/>
            </td>
            <td vg-content="c.Logs[eIdx].GetAuthority()"></td>
            <td vg-if="localprofile.IsAdmin() && c.Logs[eIdx].GetRaidId()==0">
                <a href="#" title="Remove" @click="c.cancelEntry(event, c.Logs[eIdx])">&#x1F5D1;</a>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="row" vg-if='c.MaxDisplay<len(c.Logs)'>
        <a href="#" class="ml-auto" @click="c.showMore(event)">Show more</a>
        <a href="#" class="ml-4 mr-5" @click="c.showAll(event)">Show all</a>
    </div>
</div>
<script type="application/x-go">
import (
    "fmt"
    "github.com/GontikR99/chillmodeinfo/cmd/webapp/ui"
    "github.com/GontikR99/chillmodeinfo/internal/profile/localprofile"
    "github.com/GontikR99/chillmodeinfo/internal/util"
)
</script>