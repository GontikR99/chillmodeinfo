<div class="container-fluid">
    <h5 vg-content="c.Member.GetName()"></h5>
    <h6>
        <span vg-content="fmt.Sprint(c.Member.GetLevel())"></span>
        <span vg-content="c.Member.GetClass()"></span>
    </h6>
    <div>DKP total: <span vg-content='fmt.Sprintf("%.1f", c.Member.GetDKP())'></span></div>
    <hr/>
    <h5>Change history</h5>
    <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Change</th>
            <th scope="col" style="width:100%;">Description</th>
            <th scope="col">Authority</th>
            <th scope="col" vg-if="localprofile.IsAdmin()"></th>
        </tr>
        </thead>
        <tbody>
        <tr vg-for="eIdx:=0; eIdx<c.MaxDisplay && eIdx<len(c.LogEntries); eIdx++" vg-key="c.LogEntries[eIdx].GetEntryId()">
            <td class="text-nowrap" vg-content="util.FormatTimestamp(c.LogEntries[eIdx].GetTimestamp())"></td>
            <td class="text-nowrap text-right">
                <ui:EditLabel
                        :Value='fmt.Sprintf("%.1f", c.LogEntries[eIdx].GetDelta())'
                        :Editable="localprofile.IsAdmin() && c.LogEntries[eIdx].GetRaidId()==0"
                        EditStyle="width: 4rem;"
                        @Submit="c.updateDelta(event, c.LogEntries[eIdx])"
                />
            </td>
            <td>
                <ui:EditLabel
                        :Value="c.LogEntries[eIdx].GetDescription()"
                        :Editable="localprofile.IsAdmin() && c.LogEntries[eIdx].GetRaidId()==0"
                        :TextStyle="descriptionStyle(c.LogEntries[eIdx])"
                        @Submit="c.updateDescription(event, c.LogEntries[eIdx])"/>
            </td>
            <td vg-content="c.LogEntries[eIdx].GetAuthority()"></td>
            <td vg-if="localprofile.IsAdmin() && c.LogEntries[eIdx].GetRaidId()==0">
                <a href="#" title="Remove" @click="c.cancelEntry(event, c.LogEntries[eIdx])">&#x1F5D1;</a>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="row" vg-if='c.MaxDisplay<len(c.LogEntries)'>
        <a href="#" class="ml-auto" @click="c.showMore(event)">Show more</a>
        <a href="#" class="ml-4 mr-5" @click="c.showAll(event)">Show all</a>
    </div>
</div>
<script type="application/x-go">
import (
    "fmt"
    "github.com/GontikR99/chillmodeinfo/internal/profile/localprofile"
    "github.com/GontikR99/chillmodeinfo/cmd/webapp/ui"
    "github.com/GontikR99/chillmodeinfo/internal/util"
)
</script>