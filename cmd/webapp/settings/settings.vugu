<form @submit="event.PreventDefault()">
    <div class="form-group row">
        <label class="col-form-label col-sm-2">EverQuest directory</label>
        <div class="col-sm-8">
            <vgform:Input type="text" class="form-control" :Value="c.EqDir"/>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-primary" @click="c.BrowseEqDir(event)"><span data-feather="folder"></span> Browse...</button>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2">Bid start trigger</label>
        <div class="col-sm-10">
            <vgform:Input type="text" class="form-control" :Value="c.BidStart"/>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2">Bid end trigger</label>
        <div class="col-sm-10">
            <vgform:Input type="text" class="form-control" :Value="c.BidEnd"/>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2">Bid reset trigger</label>
        <div class="col-sm-10">
            <vgform:Input type="text" class="form-control" :Value="c.BidClose"/>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-sm-2">Bids Overlay:</label>
        <div class="col-sm-3">
            <button type="button" class="btn btn-primary" @click='c.PositionOverlay(event, "bid")'>Position</button>
            <button type="button" class="btn btn-primary" @click='c.ResetOverlay(event, "bid")'>Reset</button>
            <button type="button" class="btn btn-primary" @click='c.CloseOverlay(event, "bid")'>Close</button>
        </div>
        <label class="col-form-label col-sm-2">Updates overlay:</label>
        <div class="col-sm-3">
            <button type="button" class="btn btn-primary" @click='c.PositionOverlay(event, "update")'>Position</button>
            <button type="button" class="btn btn-primary" @click='c.ResetOverlay(event, "update")'>Reset</button>
            <button type="button" class="btn btn-primary" @click='c.CloseOverlay(event, "update")'>Close</button>
        </div>
    </div>
</form>

<script type="application/x-go">
import "github.com/vugu/vugu/vgform"
</script>